<%= form_with(model: user, :html => { :class => 'user-form' }) do |form| %>

  <%= form.email_field :email, placeholder: "Email" %>
  <%= form.text_field :username, placeholder: "Username" %>
  <%= form.password_field :password, placeholder: "Password" %>

  <%= form.submit "Sign Up" %>

  <p class="flash-alert"><%= flash[:alert] %></p>

  <% if user.errors.any? %>
    <article id="error_explanation">
      <% user.errors.each do |error| %>
        <p><%= error.full_message %></p>
      <% end %>
    </article>
  <% end %>

<% end %>
